{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "rules": {
    "import/order": [
      2,
      {
        "alphabetize": {
          "caseInsensitive": false,
          "order": "asc"
        },
        "groups": ["builtin", "external", "internal"],
        "newlines-between": "never",
        "pathGroups": [
          {
            "group": "external",
            "pattern": "react",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"]
      }
    ],
    "no-console": 1,
    "no-shadow": 0,
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "always",
        "next": "*",
        "prev": ["const", "let", "var"]
      },
      {
        "blankLine": "always",
        "next": ["*"],
        "prev": ["function"]
      },
      {
        "blankLine": "always",
        "next": ["function", "export", "return"],
        "prev": ["*"]
      },
      {
        "blankLine": "any",
        "next": ["const", "let", "var"],
        "prev": ["const", "let", "var"]
      }
    ],
    "react-hooks/rules-of-hooks": 2,
    "react/prop-types": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
